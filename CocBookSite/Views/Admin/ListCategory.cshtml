@using CocBookSite.Models;
@model List<Category>
<div class="span8">
    <table>
        <tr>
            <th width="50%">
                Tên thể loại
            </th>
            <th width="30%">
                Trạng thái
            </th>
            <th width="20%">
            </th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Name
                </td>
                <td align="center">
                    @if (Model[i].Active == true)
                    {
                        @:Đang dùng
                    }
                    else
                    {
                        @:Ngừng sử dụng
                    }
                </td>
                <td>
                    <a href="javascript:EditCate(@Model[i].CateID)" class="btn btn-warning">Chỉnh Sửa</a>
                </td>
            </tr>
        }
    </table>
</div>
<script>
    function EditCate(id) {
        $('#book-list').load("@Url.Action("EditCate", "Admin")",{cateid:id});
    }
</script>
@if (false)
{  
    <script src="/Scripts/jquery-1.5.1-vsdoc.js" type="text/javascript">

    </script> 
}
