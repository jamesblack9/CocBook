@{
    ViewBag.Title = "Đăng ký";
}
<div class="container">
    <div class="span6" id="order-step">
        <div class="accordion" id="accordion2">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                        Thông tin tài khoản </a>
                </div>
                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <form id="address-form" class="form-stacked" method="post" action="@Url.Action("Register","Customer")">
                        <!-- Address form -->
                        <!-- user-name input-->
                        <div class="control-group">
                            <label class="control-label">
                                Tên Đăng Nhập</label>
                            <div class="controls">
                                <input id="user-name" name="user-name" type="text" class="input-xlarge">
                                <p class="help-block">
                                </p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                Mật Khẩu</label>
                            <div class="controls">
                                <input id="pass-word" name="pass-word" type="password" class="input-xlarge">
                                <p class="help-block">
                                </p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                Nhập lại Mật Khẩu</label>
                            <div class="controls">
                                <input id="re-pass" name="re-pass" type="password" class="input-xlarge">
                                <p class="help-block">
                                </p>
                            </div>
                        </div>
                        <!-- full-name input-->
                        <div class="control-group">
                            <label class="control-label">
                                Họ và tên</label>
                            <div class="controls">
                                <input id="full-name" name="full-name" type="text" class="input-xlarge">
                                <p class="help-block">
                                </p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                Địa chỉ mail</label>
                            <div class="controls">
                                <input id="user-email" name="user-email" type="text" class="input-xlarge">
                                <p class="help-block">
                                </p>
                            </div>
                        </div>
                        <!-- Telephone -->
                        <div class="control-group">
                            <label class="control-label">
                                Số điện thoại</label>
                            <div class="controls">
                                <input id="phone" name="phone" type="text" class="input-xlarge">
                                <p class="help-block">
                                    Dùng để xác nhận đơn hàng.</p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                Địa chỉ nhà</label>
                            <div class="controls">
                                <input id="address" name="address" type="text" class="input-xlarge">
                                <p class="help-block">
                                </p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                Quận</label>
                            <div class="controls">
                                <select id="district" name="district">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                                <p class="help-block">
                                </p>
                            </div>
                        </div>
                        <div class="button-contain text-right">
                            <button type="submit" id="btn-register" class="btn btn-large btn-success">
                                Đăng kí
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
