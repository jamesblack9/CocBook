@{
    ViewBag.Title = "Liên Hệ";
}
<div class="container">
    <div class="span6">
        <div style="width: 500px">
            <iframe width="500" height="400" src="http://regiohelden.de/google-maps/map_en.php?width=500&amp;height=400&amp;hl=en&amp;q=49%20T%C3%B4%20K%C3%BD%2C%20T%C3%A2n%20Ch%C3%A1nh%20Hi%E1%BB%87p%2C%20Ho%20Chi%20Minh%20City+(C%C3%B3c%20Book)&amp;ie=UTF8&amp;t=h&amp;z=15&amp;iwloc=A&amp;output=embed"
                frameborder="0" scrolling="no" marginheight="0" marginwidth="0"><a href="http://www.regiohelden.de/google-maps/">
                    Google Maps Script</a> von <a href="http://www.regiohelden.de/">RegioHelden</a></iframe>
            <br />
            <span style="font-size: 9px;"><a href="http://www.regiohelden.de/google-maps/" style="font-size: 9px;">
                Google Maps Script</a> by <a href="http://www.regiohelden.de/" style="font-size: 9px;">
                    RegioHelden</a></span></div>
    </div>
    <div class="span5">
        <div class="accordion" id="accordion2">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                        Thông tin góp ý </a>
                </div>
                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <form id="fb-form" class="form-stacked" method="post" action="@Url.Action("ContactUs", "Home")">
                        <!-- Address form -->
                        <div class="control-group">
                            <label class="control-label">
                                Địa chỉ mail</label>
                            <div class="controls">
                                <input id="user-email" name="user-email" type="text" class="input-xlarge" value="@ViewBag.Email">
                                <p class="help-block">
                                    Nhập địa chỉ email chính xác để có câu trả lời nhanh nhất
                                </p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                Nội dung</label>
                            <div class="controls">
                                <textarea id="content" name="content" class="input-xlarge" value="" rows="7" cols="21"></textarea>
                                <p class="help-block">
                                </p>
                            </div>
                        </div>
                        <div class="button-contain text-right">
                            <button type="submit" id="btn-feedback" class="btn btn-large btn-success">
                                Góp ý
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#fb-form').submit(function () {
        $.post("@Url.Action("ContactUs", "Home")",
            {
                usermail: $('#user-email').val(),
                content: $('#content').val()
            },
            function(data,status,xhr){
                if(data.Success){
                        $().toastmessage('showSuccessToast', data.Message);
                        $('#content').val("");
                 }
            });
            return false;
    });
</script>
@if (false)
{  
    <script src="/Scripts/jquery-1.5.1-vsdoc.js" type="text/javascript">

    </script> 
}
